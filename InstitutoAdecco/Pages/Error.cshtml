@page
@model ErrorModel
@{
    ViewData["Title"] = R["Error"];
}

<h1 class="text-danger">@R["Error"]</h1>
<h2 class="text-danger">@R["An error occurred while processing your request."]</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>@R["Request ID:"]</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>@R["Development Mode"]</h3>
<p>
    @R["Swapping to the <strong>Development</strong> environment displays detailed information about the error that occurred."]
</p>
<p>
    <strong>@R["The Development environment shouldn't be enabled for deployed applications."]</strong>
    @R["It can result in displaying sensitive information from exceptions to end users."]
    @R["For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong> and restarting the app."]
</p>
