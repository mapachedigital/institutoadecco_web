@page
@model ErrorModel
@{
    ViewData["Title"] = P["Error"];
}

<h1 class="text-danger">@P["Error"]</h1>
<h2 class="text-danger">@P["An error occurred while processing your request."]</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>@P["Request ID:"]</strong> <code>@Model.RequestId</code>
    </p>
}
