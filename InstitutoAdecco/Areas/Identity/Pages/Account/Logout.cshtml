@page
@model LogoutModel
@{
    ViewData["Title"] = P["Log out"];
}

<div class="container mt-5">
    <header>
        <h1>@ViewData["Title"]</h1>
        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-link text-dark">@P["Click here to Logout"]</button>
                </form>
            }
            else
            {
                <p>@P["You have successfully logged out of the application."]</p>
            }
        }
    </header>
</div>
