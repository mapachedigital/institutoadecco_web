@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = P["Generate two-factor authentication (2FA) recovery codes"];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@P["Put these codes in a safe place."]</strong>
    </p>
    <p>
        @P["If you lose your device and don't have the recovery codes you will lose access to your account."]
    </p>
    <p>
        @P["Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key used in an authenticator app you should <a href=\"{0}\">reset your authenticator keys.</a>", Url.Page("./ResetAuthenticator") ?? "#"]
    </p>
</div>
<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">@P["Generate Recovery Codes"]</button>
    </form>
</div>
