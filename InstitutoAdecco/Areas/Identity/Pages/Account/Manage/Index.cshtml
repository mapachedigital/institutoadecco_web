@page
@model IndexModel
@{
    ViewData["Title"] = P["Profile"];
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="@P["Please choose your username."]" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Firstname" class="form-control" placeholder="@P["Please enter your firstname."]" />
                <label asp-for="Input.Firstname" class="form-label"></label>
                <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Lastname" class="form-control" placeholder="@P["Please enter your lastname."]" />
                <label asp-for="Input.Lastname" class="form-label"></label>
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Company" class="form-control" placeholder="@P["Please enter your company."]" />
                <label asp-for="Input.Company" class="form-label"></label>
                <span asp-validation-for="Input.Company" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                @* <p><a asp-page="/AvisoDePrivacidad">@P["See the privacy policy"]</a></p> *@
                <label asp-for="Input.AcceptTermsOfService" class="form-label">
                    <input class="form-check-input" asp-for="Input.AcceptTermsOfService" />
                    @Html.DisplayNameFor(m => m.Input.AcceptTermsOfService)
                </label>
                <p><span asp-validation-for="Input.AcceptTermsOfService" class="text-danger"></span></p>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">@P["Save"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        jQuery(document).ready(function () {
            jQuery('#Input_AcceptTermsOfService').rules("add", "required");
        });
    </script>
}
