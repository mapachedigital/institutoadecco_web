@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = P["Two-factor authentication (2FA)"];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
@{
    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
    @if (consentFeature?.CanTrack ?? true)
    {
        @if (Model.Is2faEnabled)
        {
            if (Model.RecoveryCodesLeft == 0)
            {
                <div class="alert alert-danger">
                    <strong>@P["You have no recovery codes left."]</strong>
                    <p>@P["You must <a href=\"{0}\">generate a new set of recovery codes</a> before you can log in with a recovery code.", Url.Page("./GenerateRecoveryCodes") ?? "#"]</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="alert alert-danger">
                    <strong>@P["You have 1 recovery code left."]</strong>
                    <p>@P["You can <a href=\"{0}\">generate a new set of recovery codes</a>.", Url.Page("./GenerateRecoveryCodes") ?? "#"]</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="alert alert-warning">
                    <strong>@P["You have {0} recovery codes left.", Model.RecoveryCodesLeft]</strong>
                    <p>@P["You should <a href=\"{0}\">generate a new set of recovery codes</a>.", Url.Page("./GenerateRecoveryCodes") ?? "#"]</p>
                </div>
            }

            if (Model.IsMachineRemembered)
            {
                <form method="post" style="display: inline-block">
                    <button type="submit" class="btn btn-primary">@P["Forget this browser"]</button>
                </form>
            }
            <a asp-page="./Disable2fa" class="btn btn-primary">@P["Disable 2FA"]</a>
            <a asp-page="./GenerateRecoveryCodes" class="btn btn-primary">@P["Reset recovery codes"]</a>
        }

        <h4>@P["Authenticator app"]</h4>
        @if (!Model.HasAuthenticator)
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">@P["Add authenticator app"]</a>
        }
        else
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">@P["Set up authenticator app"]</a>
            <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-primary">@P["Reset authenticator app"]</a>
        }
    }
    else
    {
        <div class="alert alert-danger">
            <strong>@P["Privacy and cookie policy have not been accepted."]</strong>
            <p>@P["You must accept the policy before you can enable two factor authentication."]</p>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
