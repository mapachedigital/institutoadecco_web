@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = P["Recovery code verification"];
}


<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <p>
        @P["You have requested to log in with a recovery code. This login will not be remembered until you provide an authenticator app code at log in or disable 2FA and log in again."]
    </p>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="@P["RecoveryCode"]" />
                    <label asp-for="Input.RecoveryCode" class="form-label"></label>
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">@P["Log in"]</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}